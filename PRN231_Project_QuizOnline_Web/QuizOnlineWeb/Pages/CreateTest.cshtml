<form id="form">
    <input type="text" name="TestCode" />
    <a href="#" onclick="addQuestionTable()">Add question</a>
    <div id="data">
    </div>
</form>



<script>
    let index = 0;
    function addQuestionTable() {
        var html = `
            <table id="${index}">
        <tr>
                <th>Question content:<input type="text" name="questionContent+${index}" /></th>
            
        </tr>
    </table>
    `;
        $("#data").append(html);
    index+=1;
    }
</script>